<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Antrian">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="195dp"
        android:text="Nomor Antrian Anda Adalah"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="@dimen/twenty_dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="96sp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nomorAntrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="000"
            android:textColor="#000"
            android:textSize="96sp"
            android:textStyle="bold" />
    </LinearLayout></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/thirtytwo_dp"
        android:layout_marginStart="@dimen/thirtytwo_dp"
        android:layout_marginEnd="@dimen/thirtytwo_dp"
        android:text="Silahkan Catat Nomor Antrian Anda untuk diinput pada form Verifikasi pembayaran"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ok"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/circlebackground"
        android:text="Selesai" />
    </LinearLayout>
</RelativeLayout>